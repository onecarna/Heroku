<% if @movie.errors.any? %> <!-- #how to reference movie object and look for errors -->
  <h2>There were errors saving your movie</h2>
  <ul>
    <% @movie.errors.full_messages.each do |msg| %> <!-- #will interate through all movies and display them. -->
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @movie do |f| %> 
  <fieldset>
    <div class='fields'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='fields'>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class='fields'>
      <%= f.label :year_released %>
      <%= f.text_field :year_released %>
    </div>
    <div class='fields'>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </div> 
  </fieldset>
  <%= f.submit %>
<% end %>

<!-- # underscore will allow for render action -->